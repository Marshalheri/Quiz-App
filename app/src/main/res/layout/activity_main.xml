                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Q6_answer_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="a.) surulere"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/Q6_answer_b"
                    android:layout_width="match_parent"
