            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Question7"
                android:textColor="@color/textColor"
                android:textSize="18sp" />


            <RadioGroup
                android:id="@+id/question7RGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Q7_answer_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="a.) 3"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/Q7_answer_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="b.) 6"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/Q7_answer_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="c.) 16"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/Q7_answer_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="d.) 5"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"></LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Question8"
                android:textColor="@color/textColor"
                android:textSize="18sp" />


            <RadioGroup
                android:id="@+id/question8RGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Q8_answer_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="a.) 1990"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/Q8_answer_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="b.) 1960"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/Q8_answer_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="c.) 1963"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/Q8_answer_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="d.) 2000"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"></LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Question9"
                android:textColor="@color/textColor"
                android:textSize="18sp" />


            <RadioGroup
                android:id="@+id/question9RGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Q9_answer_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="a.) Judiciary"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/Q9_answer_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="b.) Legislative"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/Q9_answer_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="c.) Tribunal"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/Q9_answer_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="d.) Executive"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"></LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Question10"
                android:textColor="@color/textColor"
                android:textSize="18sp" />


            <RadioGroup
                android:id="@+id/question10RGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Q10_answer_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="a.) 2013"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/Q10_answer_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="b.) 2012"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/Q10_answer_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="c.) 2011"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/Q10_answer_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="d.) 2015"
                    android:textColor="#000000"
                    android:textSize="16sp" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:onClick="submitTest"
                android:text="submit"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/Button"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:onClick="resetScore"
                android:text="reset"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@color/Button"/>


        </LinearLayout>

