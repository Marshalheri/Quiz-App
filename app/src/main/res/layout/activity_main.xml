                    android:textColor="#000000"
                    android:textSize="16sp" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000"></LinearLayout>

        </LinearLayout>

        <LinearLayout
