                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/Q3_answer_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="a.) 1000"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/Q3_answer_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="b.) 200"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/Q3_answer_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="c.) 100"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <RadioButton
                    android:id="@+id/Q3_answer_d"
                    android:layout_width="match_parent"
